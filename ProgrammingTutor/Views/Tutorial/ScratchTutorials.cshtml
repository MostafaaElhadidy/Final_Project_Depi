<!-- CSS Styles for Layout and Playful Look -->
<style>
    .tutorials-container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
    }

    .tutorial {
        background-color: #F9F9F9;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        max-width: 700px;
        width: 90%;
    }

    h3 {
        text-align: center;
        font-family: 'Comic Sans MS', sans-serif;
        color: #FF5733;
    }

    iframe {
        width: 100%;
        height: auto;
        aspect-ratio: 4 / 3;
        border-radius: 10px;
    }

    .complete-button {
        display: block;
        width: 100%;
        padding: 15px;
        margin-top: 10px;
        font-size: 1.1em;
        color: white;
        background-color: #4CAF50;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .complete-button:hover {
            background-color: #45a049;
        }

    iframe {
        aspect-ratio: 3 / 2;
    }

    }
</style>

<script>
    // Prevent window.onload conflict by ensuring each tutorial triggers updates individually
    document.querySelectorAll('.tutorial').forEach((tutorial, index) => {
        window.onload = function () {
            fetch(/Progress/UpdateProgress ? tutorialId = ${ index + 1} & completed=false, {
                method: 'POST'
            });
        };
      });
</script>