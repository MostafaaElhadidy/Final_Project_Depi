@model IEnumerable<ProgrammingTutor.Models.Tutorial>

<h2>Manage Tutorials</h2>

<p>
    <a asp-action="AddTutorial" class="btn btn-success">Add New Tutorial</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Level</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tutorial in Model)
        {
            <tr>
                <td>@tutorial.Title</td>
                <td>@tutorial.Description</td>
                <td>@tutorial.Level</td>
                <td>@tutorial.Duration</td>
                <td>
                    <a asp-action="EditTutorial" asp-route-id="@tutorial.TutorialId" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteTutorial" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@tutorial.TutorialId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
